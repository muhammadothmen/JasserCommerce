<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user_image"
        android:layout_width="@dimen/nav_header_image_size"
        android:layout_height="@dimen/nav_header_image_size"
        android:layout_marginStart="@dimen/nav_header_image_vertical_margin"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_user_place_holder"
         />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/nav_header_text_vertical_margin"
        android:layout_marginTop="@dimen/nav_header_text_horizontal_margin"
        android:layout_marginEnd="@dimen/nav_header_text_vertical_margin"
        android:layout_marginBottom="@dimen/nav_header_text_horizontal_margin"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/nav_header_user_name_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_divider_height"
        android:background="@color/colorGrayDark" />
</LinearLayout>